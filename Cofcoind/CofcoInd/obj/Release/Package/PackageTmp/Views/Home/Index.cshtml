    <section id="slider-novedades">
        <div class="container-fluid no-padding">
            <div class="filter-home">
                <div class="btn-blue active" data-filter="novedades">ÚLTIMAS NOVEDADES</div>
                <div class="btn-blue" data-filter="hechos-relevantes">HECHOS RELEVANTES</div>
            </div>
            <div id="carousel-hechos-relevantes">
                <div class="content">
                    <div class="table-responsive">

                        <table class="">
                            <thead>
                                <tr>
                                    <th>FECHA</th>
                                    <th>ENTIDAD</th>
                                    <th>DESCRIPCIÓN</th>
                                    <th width="150px">DESCARGAR</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (CNV_Site.Models.Documentos HR in Model.DOCSHR)
                            {
                            <tr>
                                <td>@HR.fecha.ToString("d MMM yyyy hh:mm",
                   System.Globalization.CultureInfo.CreateSpecificCulture("es-AR"))</td>
                                <td>@HR.entidadDescripcion</td>
                                <td>@HR.tipoDocumento</td>
                                <td><a href="@HR.link"><img src="~/Content/assets/img/pdf.png"></a></td>
                            </tr>
 
                            }
                        </tbody>
                        </table>

                    </div><a href="@Url.Action("Index", "HechosRelevantes")" class=" btn btn-leer-mas">VER TODOS</a>
                </div>
            </div>

            <div id="carousel-novedades" class="carousel slide visible">
                
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @{int count = 0; }
                    @foreach (CNV_Site.Areas.BackOffice.Models.Note SN in Model.N)
                    {
                        @*if (count == 0)
                        {
                            <li data-target="#carousel-novedades" data-slide-to="@(count)" class="active"></li>

                        }
                        else
                        {
                            <li data-target="#carousel-novedades" data-slide-to="@(count)" class=""></li>

                        }*@
                        count = count + 1;
                    }

                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @{int count2 = 0; }
                    @foreach (CNV_Site.Areas.BackOffice.Models.Note SN in Model.N)
                    {
                        if (count2 == 0)
                        {
                            if (String.IsNullOrWhiteSpace(SN.imgNote))
                            {
                                <div class="item active">
                                    <div class="caption">
                                        <h2>@SN.create_datetime.ToShortDateString()</h2>
                                        <h1>@SN.titleNote</h1>
                                        <a href="@Url.Content("~/")Prensa/Post/@SN.IdNote/@SN.GenerateSlug()" class="btn btn-leer-mas">LEER MÁS</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="item active">
                                    <div class="caption">
                                        <div class="col-md-3" ><img src="@Url.Content("~/")Content/Upload/@SN.imgNote" class="img-responsive"></div>
                                        <div class="col-md-9">
                                            <h2>@SN.create_datetime.ToShortDateString()</h2>
                                            <h1>@SN.titleNote</h1>
                                            <a href="@Url.Content("~/")Prensa/Post/@SN.IdNote/@SN.GenerateSlug()" class="btn btn-leer-mas">LEER MÁS</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            if (String.IsNullOrWhiteSpace(SN.imgNote))
                            {
                                <div class="item ">
                                    <div class="caption">
                                        <h2>@SN.create_datetime.ToShortDateString()</h2>
                                        <h1>@SN.titleNote</h1>
                                        <a href="@Url.Content("~/")Prensa/Post/@SN.IdNote/@SN.GenerateSlug()" class="btn btn-leer-mas">LEER MÁS</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="item ">
                                    <div class="caption">
                                        <div class="col-md-3" style="margin-top:15%"><img src="@Url.Content("~/")Content/Upload/@SN.imgNote" class="img-responsive"></div>
                                        <div class="col-md-9">
                                            <h2>@SN.create_datetime.ToShortDateString()</h2>
                                            <h1>@SN.titleNote</h1>
                                            <a href="@Url.Content("~/")Prensa/Post/@SN.IdNote/@SN.GenerateSlug()" class="btn btn-leer-mas">LEER MÁS</a>
                                        </div>
                                    </div>
                                </div>
                            }

                        }

                        count2 = count2 + 1;


                    }
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-novedades" role="button" data-slide="prev">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>

                <span class="sr-only">Previo</span>
            </a>
            <a class="right carousel-control" href="#carousel-novedades" role="button" data-slide="next">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>

                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    </section>
    <section id="slider-servicios">
