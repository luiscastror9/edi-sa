@model CofcoInd.Areas.BackOffice.SliderHome
@{
    ViewBag.Title = "Crear Slide Home CNV";
    Layout = "~/Areas/BackOffice/Views/Shared/_AdminLteLayout.cshtml";
}

    <link type="text/css" href="~/Scripts/AdminLTE/plugins/bootstrap-toogle/bootstrap-toggle.css" rel="stylesheet">



<div class="row">

    <section class="col-lg-12 ">
        <div class="box-default ">
            @using (Html.BeginForm("EditBanner", "Default", FormMethod.Post, new { name = "createBanner", id = "createBanner", enctype = "multipart/form-data" }))
            {
                <div class="box  box-success ">
                    <div class="box-header">
                        <i class="fa fa-fw"></i>

                        <div class="box-tools pull-right" data-toggle="tooltip" title="Status">

                        </div>

                    </div>


                    <div class="box-body" id="maestro-box">
                        @*@Html.AntiForgeryToken()*@
                        @Html.HiddenFor(model => model.IdSlideHome)


                        <div class="form-group ">
                            @Html.Label("Nombre del Banner", htmlAttributes: new { @class = "control-label " })

                            @Html.EditorFor(model => model.nameSlideHome, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group ">
                            @Html.Label("Descripcion Banner", htmlAttributes: new { @class = "control-label " })

                            @Html.EditorFor(model => model.descSlideHome, new { htmlAttributes = new { @class = "form-control" } })

                        </div>

                        <div class="form-group ">
                            @Html.Label("URL Banner", htmlAttributes: new { @class = "control-label " })

                            @Html.EditorFor(model => model.urlSlideHome, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                          
                            @Html.Label("Activo", htmlAttributes: new { @class = "control-label" })
                            <input id="activeSlideHome" type="checkbox"  @(Model.activeSlideHome == true ? "checked" : "")  data-toggle="toggle" data-on="Activo" data-off="Inactivo">
                            <input type="hidden" name="h_activeSlideHome" id="h_activeSlideHome" value="@(Model.activeSlideHome == true ? "true" : "false") ">

                            
                        </div>
                        <div class="form-group">

                            @Html.Label("Imagen", htmlAttributes: new { @class = "control-label" })
                            <img src="~/Content/Upload/@(Model.urlImgSlideHome)" width="700px" height="300px" />

                        </div>
                        <div class="form-group ">
                            @Html.Label("Imagen", htmlAttributes: new { @class = "control-label " })

                            @Html.TextBox("urlImgSlideHome", "", new { type = "file", accept = "*.jpg, *.jpeg, *.png" }) <br />

                        </div>
                    </div>

                    <div class="box-footer">

                        <input id="btnSaveBanner" type="submit" value="Guardar" class="btn btn-info btn-infolink" style="color:white" />
                        <input id="btnCancelarBanner" onclick="window.location.replace('@Url.Action("Banner", "Default", new { Area = "BackOffice" })')"  type="reset" value="Cancelar" class="btn btn-info btn-infolink" style="color:white" />
                    </div>
                </div>
            }

    </section>

</div>

@section scripts {
    @*NOTE: These should NOT be used in a production situation
        They do contains useful snippets on how to setup charts*@
    <script src="/Areas/BackOffice/Scripts/Banner.js"></script>
<script src="~/Scripts/AdminLTE/plugins/bootstrap-toogle/bootstrap-toggle.js"></script>
}
