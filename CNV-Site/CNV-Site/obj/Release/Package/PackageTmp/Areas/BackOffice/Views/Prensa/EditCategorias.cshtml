@model CNV_Site.Areas.BackOffice.CategoriasNotes
@{
    ViewBag.Title = "Editar Articulo de Prensa CNV";
    Layout = "~/Areas/BackOffice/Views/Shared/_AdminLteLayout.cshtml";
}

    <link type="text/css" href="~/Scripts/AdminLTE/plugins/bootstrap-toogle/bootstrap-toggle.css" rel="stylesheet">



<div class="row">

    <section class="col-lg-12 ">
        <div class="box-default ">
            @using (Html.BeginForm("EditCategorias", "Prensa", FormMethod.Post, new { name = "createCategorias", id = "createCategorias", enctype = "multipart/form-data" }))
            {
                <div class="box  box-success ">
                    <div class="box-header">
                        <i class="fa fa-fw"></i>

                        <div class="box-tools pull-right" data-toggle="tooltip" title="Status">

                        </div>

                    </div>


                    <div class="box-body" id="maestro-box">
                        @*@Html.AntiForgeryToken()*@
                        @Html.HiddenFor(model => model.IdCategoriasNotes)


                        <div class="form-group ">
                            @Html.Label("Descripcion", htmlAttributes: new { @class = "control-label " })

                            @Html.EditorFor(model => model.descCategoriasNotes, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                       
                    </div>

                    <div class="box-footer">

                        <input id="btnSaveCategorias" type="submit" value="Actualizar" class="btn btn-info btn-infolink" style="color:white" />
                        <input id="btnCancelarCategorias" onclick="window.location.replace('@Url.Action("Categorias", "Prensa", new { Area = "BackOffice" })')" type="reset" value="Cancelar" class="btn btn-info btn-infolink" style="color:white" />
                    </div>
                </div>
            }

    </section>

</div>

@section scripts {
    @*NOTE: These should NOT be used in a production situation
        They do contains useful snippets on how to setup charts*@
<script src="~/Areas/BackOffice/Scripts/Categorias.js"></script>

<script src="~/Scripts/AdminLTE/plugins/bootstrap-toogle/bootstrap-toggle.js"></script>
}
