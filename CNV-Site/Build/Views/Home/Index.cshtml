@model List<CNV_Site.Areas.BackOffice.SliderHome>
    @{
        ViewBag.Title = "Home Page";
    }
    @{
        Layout = "~/Views/Shared/_LayoutHome.cshtml";
    }

    <section id="slider-novedades">
        <div class="container-fluid no-padding">

            <div id="carousel-novedades" class="carousel slide ">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @{int count = 0; }
                    @foreach (CNV_Site.Areas.BackOffice.SliderHome SH in Model)
                    { 
                        if (count == 0)
                        {
                            <li data-target="#carousel-novedades" data-slide-to="@(count)" class="active"></li>

                        }
                        else
                        {
                            <li data-target="#carousel-novedades" data-slide-to="@(count)" class=""></li>

                        }
                        count = count + 1; 
                    }
                 
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                   @{int count2 = 0; }
                   @foreach (CNV_Site.Areas.BackOffice.SliderHome SH in Model)
                   {
                       if (count2 == 0)
                       {
                        <div class="item active" style="background:url(@Url.Content("~/")Content/Upload/@SH.urlImgSlideHome);">
                            <div class="caption">
                                <h2>@SH.create_datetime.ToShortDateString()</h2>
                                <h1>@SH.descSlideHome</h1>
                                <a href="@SH.urlSlideHome" class="btn btn-leer-mas">LEER MÁS</a>
                            </div>
                        </div>
                       }
                       else
                       {
                        <div class="item" style="background:url(@Url.Content("~/")Content/Upload/@SH.urlImgSlideHome);">
                            <div class="caption">
                                <h2>@SH.create_datetime.ToShortDateString()</h2>
                                <h1>@SH.descSlideHome</h1>
                                <a href="@SH.urlSlideHome" class="btn btn-leer-mas">LEER MÁS</a>
                            </div>
                        </div>
                       }

                       count2 = count2 + 1;


                   }
                </div>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-novedades" role="button" data-slide="prev">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>

                <span class="sr-only">Previo</span>
            </a>
            <a class="right carousel-control" href="#carousel-novedades" role="button" data-slide="next">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>

                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    </section>
    <section id="slider-servicios">
        <div class="container-fluid no-padding">
            <div id="carousel-servicios" class="carousel slide ">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-servicios" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-servicios" data-slide-to="1" class=""></li>
                    <li data-target="#carousel-servicios" data-slide-to="2" class=""></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active" style="background:url(@Url.Content("~/")Content/assets/img/slide2.png);"> </div>
                    <div class="item " style="background:url(@Url.Content("~/")Content/assets/img/slide2.png);"> </div>
                    <div class="item " style="background:url(@Url.Content("~/")Content/assets/img/slide2.png);"> </div>
                </div>
            </div>
        </div>
    </section>
