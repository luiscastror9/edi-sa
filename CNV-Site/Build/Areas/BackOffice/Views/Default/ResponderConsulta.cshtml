@model CNV_Site.Areas.BackOffice.RespuestaConsultas
@{
    ViewBag.Title = "Crear Slide Home CNV";
    Layout = "~/Areas/BackOffice/Views/Shared/_AdminLteLayout.cshtml";
}

    <link type="text/css" href="~/Scripts/AdminLTE/plugins/bootstrap-toogle/bootstrap-toggle.css" rel="stylesheet">



<div class="row">

    <section class="col-lg-12 ">
        <div class="box-default ">
            @using (Html.BeginForm("EditBanner", "Default", FormMethod.Post, new { name = "createBanner", id = "createBanner", enctype = "multipart/form-data" }))
            {
                <div class="box  box-success ">
                    <div class="box-header">
                        <i class="fa fa-fw"></i>

                        <div class="box-tools pull-right" data-toggle="tooltip" title="Status">

                        </div>

                    </div>


                    <div class="box-body" id="maestro-box">
                        @*@Html.AntiForgeryToken()*@
                        @Html.HiddenFor(model => model.IdConsulta)


                        <div class="form-group ">
                            @Html.Label("Nombre ", htmlAttributes: new { @class = "control-label " })

                            @Html.EditorFor(model => model.NombreRespuestaConsultas, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="form-group ">
                            @Html.Label("Consulta", htmlAttributes: new { @class = "control-label " })

                            @Html.TextAreaFor(model => model.contenidoConsulta, new { @class = "textarea", @style = "width: 100 %; height: 200px; font - size: 14px; line - height: 18px; border: 1px solid #dddddd; padding: 10px;" })


                        </div>

                    </div>
                    <div class="box-footer">

                        <input id="btnSaveRespuestaConsulta" type="submit" value="Guardar" class="btn btn-info btn-infolink" style="color:white" />
                        <input id="btnCancelarRespuestaConsulta" type="reset" value="Cancelar" class="btn btn-info btn-infolink" style="color:white" />
                    </div>
                </div>
            }

    </section>

</div>

@section scripts {
    @*NOTE: These should NOT be used in a production situation
        They do contains useful snippets on how to setup charts*@
    <script src="/Areas/BackOffice/Scripts/Consulta.js"></script>
<script src="~/Scripts/AdminLTE/plugins/bootstrap-toogle/bootstrap-toggle.js"></script>
}
@Scripts.Render("~/Scripts/AdminLTE/plugins/ckeditor/js")
<script>
    $.widget.bridge('uibutton', $.ui.button);
    //  $(".textarea").wysihtml5();
    CKEDITOR.replace('contenidoConsulta');
</script>
